#!/usr/bin/env bashio

# Create required host directories during installation
mkdir -p /share/crafty
mkdir -p /share/crafty/logs
mkdir -p /share/crafty/servers
mkdir -p /share/crafty/import
mkdir -p /config/crafty/app/config

# Set proper permissions
chmod -R 755 /share/crafty
chmod -R 755 /config/crafty

# Report success
bashio::log.info "Created all necessary directories for Crafty Controller"